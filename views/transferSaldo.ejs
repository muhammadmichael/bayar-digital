<%- include('templates/header')-%>
<div class="d-flex align-items-center justify-content-center mt-5">
    <div class="card p-2" style="width: 19rem;">
        <h3 class="d-flex d-flex align-items-center justify-content-center">Transfer Saldo</h3>
        <div class="form-group">
            Nama User: <p><%= transfer.name %> </p><br>Saldo: 
            <p><%= saldo.nominalSaldo %> </p>
        </div>
        <form>
            <div class="form-group">
                <label for="idpenerima">ID Penerima</label>
                <input type="text" class="form-control" id="idpenerima" placeholder="Enter ID">
            </div>
            <div class="form-group">
                <label for="nominal">Nominal</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Rp. </span>
                    </div>
                    <input type="number" class="form-control" name="nominal" value="0" step="5000" min="0">
                </div>
            </div>
            <div class="d-flex align-items-center justify-content-center">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>

    <%- include('templates/footer')-%>